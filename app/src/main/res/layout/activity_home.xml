<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/logo_person"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_pin_24"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/get_username"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Hallo, Username"
        android:layout_toLeftOf="@id/logo_person"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        />


    <ImageView
        android:id="@+id/logo_tix"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/goeltix"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_tix"
        android:layout_centerHorizontal="true"
        android:text="GoelTix for Filmovers"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_extrabold"
        android:textSize="20sp"
        android:textStyle="bold" />



    <androidx.cardview.widget.CardView
        android:id="@+id/card_inti"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/top_movie"
            android:textStyle="bold"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Movie"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            />

